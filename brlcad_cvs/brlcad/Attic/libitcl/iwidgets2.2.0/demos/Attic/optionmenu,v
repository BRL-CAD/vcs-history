@#!/bin/sh
# ----------------------------------------------------------------------
#  DEMO: optionmenu in [incr Widgets]
# ----------------------------------------------------------------------
#\
exec itkwish -f "$0" ${1+"$@@"}
package require -exact Iwidgets 2.2

# itkwish interprets the rest...
# ----------------------------------------------------------------------

iwidgets::optionmenu .cb -labeltext "Font:" -labelpos w -command {
    puts "selected: [.cb get]"
}
pack .cb

.cb configure -items {
    Ariel
    Courier
    Helvetica
    Knarly
    Lucida
    Rumpus
    Symbol
    Times
    "Zapf Dingbats"
}
@


