#if defined(__CAKE__irix3)
/*	Silicon Graphics 4D, which uses the MIPS chip.
 *	NOTE:  "IRIX 3.3, 3.3.1, and 3.3.2" are the ONLY software releases
 *	supported by this configuration section.  See below for 4.0.
 *	IRIX 3.2 and older versions of the operating system can not be used.
 *	NOTE:  If the shared library is used, then all machine types can
 *	use the same binary programs, and no type discrimination is
 *	necessary.  However, this prevents PIXIE from being used...
 */
#	undef	sgi
#	define	MTYPE	4d
#	if 0
/*		This version for production: optimization & shared libraries */
#		define	OPTIMIZER	-O2
/*		Use shared libraries */
#		define	SHARED	_s
#	else
/*		This version for debugging/profiling:  DBX or PIXIE */
#		if 1
/*			DBX works OK with shared libraries */
#			define	OPTIMIZER	-g
#			define	SHARED	_s
#		else
/*			To use PIXIE, you have to use the non-shared libraries */
#			define	OPTIMIZER	-O2
#			define	SHARED	/**/
#		endif
#	endif
#	define	GFLAG		-G 14
#	define  CC_OPTS		GFLAG  -prototypes -DIRIX=3
#	define	STANDARD_LIBES	-lm -lmalloc -lc''SHARED
#	define	LIBRT_LIBES	-lmpc
