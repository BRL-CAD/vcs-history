#		define	MGED_LIBES	-lsuntool -lsunwindow -lpixrect \
			-L''XLIBDIR -lX11
#	endif
#	if 0
/*		"Unbundled" (i.e. "improved") compilers.  Use if you have them */
#		define	CC	/usr/lang/cc
#		define	FC	/usr/lang/f77
#	endif
#endif

