11.7
log
@moved to src/nirt/
@
text
@/*	BSPHERE.C	*/
#ifndef lint
static const char RCSid[] = "$Header: /n/xoff/cvs/brlcad/nirt/bsphere.c,v 11.6 2004/05/10 15:30:49 erikg Exp $";
#endif

/*	INCLUDES	*/
#ifdef HAVE_CONFIG_H
# include "config.h"
#endif



#include	<stdio.h>
#include	<math.h>

#include	"machine.h"
#include	"vmath.h"
#include	"raytrace.h"
#include	"./nirt.h"
#include	"./usrfmt.h"

fastf_t	bsphere_diameter;

void set_diameter(struct rt_i *rtip)
{
    vect_t	diag;

    VSUB2(diag, rtip -> mdl_max, rtip -> mdl_min);
    bsphere_diameter = MAGNITUDE(diag);
}
@


