rtscale_SOURCES = rtscale.c read-rtlog.c
rtshot_SOURCES = rtshot.c
rtsil_SOURCES = $(COMMON) viewsil.c
rtwalk_SOURCES = rtwalk.c
rtweight_SOURCES = $(COMMON) viewweight.c
rtxray_SOURCES = $(COMMON) viewxray.c
