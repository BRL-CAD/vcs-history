@d1 3
a3 1
#               B R L C A D . I N S T A L L . I N
a45 5
pre_install() {
    /bin/true
}

# arg 1:  the new package version
d47 4
a50 16
    if ! [ `grep '@@BRLCAD_ROOT@@/lib' etc/ld.so.conf` ]; then
	echo "@@BRLCAD_ROOT@@/lib" >>etc/ld.so.conf
	sbin/ldconfig -r .
    fi
}

# arg 1:  the new package version
# arg 2:  the old package version
pre_upgrade() {
    /bin/true
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
    /bin/true
d55 4
a58 4
    cat etc/ld.so.conf | grep -v '@@BRLCAD_ROOT@@/lib' >/tmp/.pacbrlcad
    mv /tmp/.pacbrlcad etc/ld.so.conf
    chmod 644 etc/ld.so.conf
    sbin/ldconfig -r .
a60 4
# arg 1:  the old package version
post_remove() {
    /bin/true
}
