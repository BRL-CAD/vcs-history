#include "regguts.h"

/*
 - regcomp - compile regular expression
 */
int
regcomp(re, str, flags)
regex_t *re;
const char *str;
int flags;
{
	size_t len;
	int f = flags;

	if (f&REG_PEND) {
		len = re->re_endp - str;
		f &= ~REG_PEND;
	} else
		len = strlen(str);

	return re_comp(re, str, len, f);
}

/*
 - regexec - execute regular expression
 */
int
regexec(re, str, nmatch, pmatch, flags)
regex_t *re;
const char *str;
size_t nmatch;
regmatch_t pmatch[];
int flags;
{
	const char *start;
	size_t len;
	int f = flags;

	if (f&REG_STARTEND) {
		start = str + pmatch[0].rm_so;
		len = pmatch[0].rm_eo - pmatch[0].rm_so;
		f &= ~REG_STARTEND;
	} else {
		start = str;
		len = strlen(str);
	}

	return re_exec(re, start, len, nmatch, pmatch, f);
}

