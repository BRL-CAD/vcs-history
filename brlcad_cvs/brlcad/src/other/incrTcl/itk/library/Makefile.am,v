install-data-hook:
	@@mkdir -p $(DESTDIR)$(pkglibdir)
	@@for i in $(itkscripts) ; do \
	    echo "Installing $$i" ; \
	    $(INSTALL_DATA) $$i $(DESTDIR)$(pkglibdir)/. ; \
	done;

EXTRA_DIST = Archetype.itk Toplevel.itk Widget.itk itk.tcl tclIndex
