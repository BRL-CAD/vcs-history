	-@@mkdir $(DESTDIR)$(INCPATH)/libpng
	-@@mkdir $(DESTDIR)$(LIBPATH)
	-@@rm -f $(DESTDIR)$(INCPATH)/png.h
	-@@rm -f $(DESTDIR)$(INCPATH)/pngconf.h
d68 1
a68 1
	rm -f *.o libpng.a pngtest pngout.png
@


