		dragdrop.tcl \
		graph.tcl \
		hierbox.tcl \
		tabnotebook.tcl \
		tabset.tcl \
		treeview.tcl \
		tclIndex \
		$(cursors)

ddFiles =	dd-color.tcl \
		dd-file.tcl \
		dd-number.tcl \
		dd-text.tcl \
		tclIndex

instdirs =	$(prefix) $(exec_prefix) $(libdir) \
		$(scriptdir) $(scriptdir)/dd_protocols $(libdir)/tcl$(v1) \
		$(pkgdir)

