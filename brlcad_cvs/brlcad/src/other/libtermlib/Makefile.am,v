1.9
log
@remove the MAINTAINERCLEAN rules, they're never really used regardless of the debate over whether the Makefile.in files belong there or not
@
text
@# $Id: Makefile.am,v 1.8 2007/03/15 00:18:05 brlcad Exp $

lib_LTLIBRARIES = libtermlib.la

AM_CPPFLAGS = -DCM_N -DCM_GT -DCM_B -DCM_D ${TERMLIB_CPPFLAGS}

noinst_HEADERS = termcap.h

libtermlib_la_SOURCES = \
	termcap.c \
	tgoto.c \
	tputs.c

termcapdir = $(BRLCAD_DATA)/etc
termcap_DATA = termcap

termcap: termcap.src
	cp $(top_srcdir)/src/other/libtermlib/termcap.src termcap

EXTRA_DIST = \
	termcap \
	termcap.src

BUILT_SOURCES = termcap

DISTCLEANFILES = $(BUILT_SOURCES)

include $(top_srcdir)/misc/Makefile.defs

@


