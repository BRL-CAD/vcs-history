1.11
log
@remove the MAINTAINERCLEAN rules, they're never really used regardless of the debate over whether the Makefile.in files belong there or not
@
text
@# $Id: Makefile.am,v 1.10 2007/09/12 04:02:36 brlcad Exp $

if BUILD_CUBIT
CUBIT_DIR = Cubit
CUBIT_FILES =
else !BUILD_CUBIT
CUBIT_DIR =
CUBIT_FILES = \
	Cubit/Makefile.am \
	Cubit/Makefile.in \
	Cubit/g-sat.cxx
endif

if BUILD_EF
EF_DIR = EndgameFramework
EF_FILES =
else !BUILD_EF
EF_DIR =
EF_FILES = \
	EndgameFramework/Makefile.am \
	EndgameFramework/Makefile.in
endif

if WITH_PROE
PROE_DIR = ProEngineer
PROE_FILES =
else !WITH_PROE
PROE_DIR =
PROE_FILES = \
	ProEngineer/Makefile.am \
	ProEngineer/Makefile.in \
	ProEngineer/install.doc \
	ProEngineer/mk.in \
	ProEngineer/proe-brl.c \
	ProEngineer/proe_brl.res \
	ProEngineer/proe_brl_error.res \
	ProEngineer/proe_brl_gen_error.res \
	ProEngineer/protk.dat.in \
	ProEngineer/usermsg.txt
endif

if BUILD_UG
UG_DIR = Unigraphics
UG_FILES =
else !BUILD_UG
UG_DIR =
UG_FILES = \
	Unigraphics/Makefile.am \
	Unigraphics/Makefile.in \
	Unigraphics/conv.h \
	Unigraphics/log.h \
	Unigraphics/ug-g.1 \
	Unigraphics/ug-g.c \
	Unigraphics/ug_misc.c \
	Unigraphics/ug_misc.h
endif

SUBDIRS = \
	$(CUBIT_DIR) \
	$(EF_DIR) \
	$(PROE_DIR) \
	$(UG_DIR)

EXTRA_DIST = \
	README \
	$(CUBIT_FILES) \
	$(EF_FILES) \
	$(PROE_FILES) \
	$(UG_FILES)

DIST_SUBDIRS = \
	Cubit \
	EndgameFramework \
	ProEngineer \
	Unigraphics

include $(top_srcdir)/misc/Makefile.defs
@


1.10
log
@automake 1.6 chokes on having EXTRA_DIST listed on multiple true/false contexts, and does not grok the += syntax.  it's still supported because it's still pretty prevalent, so back it up so EXTRA_DIST is only listed once.
@
text
@d1 1
a1 1
# $Id: Makefile.am,v 1.9 2007/09/10 16:47:28 erikgreenwald Exp $
a76 2
MAINTAINERCLEANFILES = Makefile.in

@


1.9
log
@include the sources in the dist, even if not built
@
text
@d1 1
a1 3
# $Id: Makefile.am,v 1.8 2007/03/28 13:25:47 brlcad Exp $

EXTRA_DIST = README
d5 1
d8 1
a8 1
EXTRA_DIST += \
d16 1
d19 1
a19 1
EXTRA_DIST += \
d26 1
d29 1
a29 1
EXTRA_DIST += \
d44 1
d47 1
a47 1
EXTRA_DIST += \
d64 7
@


