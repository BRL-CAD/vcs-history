14.9
log
@remove the MAINTAINERCLEAN rules, they're never really used regardless of the debate over whether the Makefile.in files belong there or not
@
text
@# $Id: Makefile.am,v 14.8 2007/09/07 19:54:18 erikgreenwald Exp $

lib_LTLIBRARIES = libcursor.la

man_MANS = libcursor.3

libcursor_la_SOURCES = cursor.c

libcursor_la_LDFLAGS = -version-info 19:1
libcursor_la_LIBADD = ${CURSOR_LIBS}
libcursor_la_CFLAGS = ${TERMLIB_CPPFLAGS}

EXTRA_DIST = $(man_MANS)

include $(top_srcdir)/misc/Makefile.defs
@


