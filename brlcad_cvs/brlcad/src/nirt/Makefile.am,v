14.14
log
@remove the MAINTAINERCLEAN rules, they're never really used regardless of the debate over whether the Makefile.in files belong there or not
@
text
@# $Id: Makefile.am,v 14.13 2007/09/07 19:54:19 erikgreenwald Exp $

bin_PROGRAMS = \
	nirt \
	showshot

AM_CPPFLAGS = ${TCL_CPPFLAGS}

nirt_SOURCES = \
	nirt.c \
	command.c \
	conversion.c \
	if.c \
	interact.c \
	bsphere.c \
	read_mat.c \
	str_manip.c \
	parse_fmt.c

nirt_CFLAGS = -DDFLT_SHELL=\"/bin/sh\"
nirt_LDADD = ${FB} ${RT}

showshot_SOURCES = showshot.c
showshot_LDADD = ${BN}

man_MANS = \
	nirt.1 \
	showshot.1

noinst_HEADERS = \
	nirt.h \
	usrfmt.h

EXTRA_DIST = \
	$(man_MANS) \
	dist_def.c \
	nirt.dsp

include $(top_srcdir)/misc/Makefile.defs

FAST_OBJECTS = \
	$(nirt_OBJECTS) \
	$(showshot_OBJECTS) \
	$(bin_PROGRAMS)
@


