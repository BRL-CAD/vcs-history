#if 0

/*LINTLIBRARY*/
#ifndef lint
static const char RCSid[] = "@@(#)$Header: /cvsroot/brlcad/brlcad/src/burst/Tc.c,v 14.5 2005/10/23 04:44:29 brlcad Exp $ (BRL)";
static char sccsTag[] = "%Z% %M% %I%, modified %G% at %U%, archive %P%";
