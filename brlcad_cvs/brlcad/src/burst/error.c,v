 *	rt_bomb		Called upon fatal RT library error.
a46 14
/*
 *  		R T _ B O M B
 *
 *  Abort the RT library
 */
void
rt_bomb(str)
char *str;
	{
	brst_log( "%s (librt.a) : Fatal error, aborting!\n", str );
	(void) fflush( stdout );
	(void) abort();			  /* Should dump.		*/
	/* exit(12); XXX - this shouldn't be needed */
	}
