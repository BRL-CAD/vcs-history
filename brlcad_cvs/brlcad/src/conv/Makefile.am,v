	nmg-sgp \
	pix2asc \
	ply-g \
	poly-bot \
	proe-g \
	stl-g \
	tankill-g \
	viewpoint-g

noinst_PROGRAMS = \
	g4-g5 \
	g5-g4 \
	g-xxx \
	g-xxx_facets \
	walk_example

EXTRA_DIST = \
	$(COMMON_EXTRA)

endif
# end ONLY_BENCHMARK

# static is required to avoid MIPSpro 7.3 long rpath linker bug
