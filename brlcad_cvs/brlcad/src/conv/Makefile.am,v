log
@add walk_example to the build, but don't install it.
@
text
@# $Id: Makefile.am,v 14.27 2007/10/13 19:34:46 brlcad Exp $

AM_CPPFLAGS = ${TCL_CPPFLAGS}

COMMON_EXTRA = \
	dbclean.sh \
	Formats.csv

if ONLY_BENCHMARK

SUBDIRS =

bin_PROGRAMS = \
	asc2g \
	asc2pix \
	g2asc \
	pix2asc

EXTRA_DIST =
	$(COMMON_EXTRA) \
	g-xxx.c \
	g-xxx_facets.c \
	g4-g5.c \
	g5-g4.c \
	walk_example.c

else !ONLY_BENCHMARK

SUBDIRS = \
	comgeom \
	iges \
	jack \
	off \
	patch

bin_PROGRAMS = \
	asc-nmg \
	asc2g \
	asc2pix \
	bot-bldxf \
	bot-raw \
	bot_shell-vtk \
	conv-vg2g \
	cy-g \
	dbupgrade \
	dxf-g \
	enf-g \
	euclid-g \
	euclid_format \
	euclid_unformat \
