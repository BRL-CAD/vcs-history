				ptr1->left = ptra;
				ptr2->left = Copytree( ptra , ptr2 );
				ptr2->right = ptrb;
				ptr->op = Union;
				if( ptr1->op == Intersect )
					ptr1->op = Subtract;
				else
					ptr1->op = Intersect;
				ptr2->op = Subtract;
				ptr2->parent = ptr;
				ptrb->parent = ptr2;
				ptra->parent = ptr1;
			}
		}
		if( ptr->op == Intersect && ptr->left->op > Union && ptr->right->op > Union )
		{
		/*	(a"+ or -"b)+(c"+ or -"d) => (((a+c)"+ or -"b)"+ or -"d)	*/
			retval = 0;
			ptra = ptr->left->left;
			ptrb = ptr->left->right;
			ptrc = ptr->right->left;
			ptrd = ptr->right->right;
			ptr1 = ptr->left;
			ptr2 = ptr->right;
			ptr->left = ptr2;
			ptr->right = ptrd;
			ptr2->left = ptr1;
			ptr2->right = ptrb;
			ptr1->right = ptrc;
			ptr->op = ptr2->op;
			ptr2->op = ptr1->op;
			ptr1->op = Intersect;
			ptrb->parent = ptr2;
			ptr1->parent = ptr2;
			ptrc->parent = ptr1;
			ptrd->parent = ptr;
