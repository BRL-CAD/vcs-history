	that BRL-CAD likes, i.e. (((a+b)-c)+d) as opposed to (a+(b-(c-d))).
	The tree is traversed in LRN order.	*/

#include "./iges_struct.h"

Arrange( root )
struct node *root;
{
	struct node *Copytree(),*Pop(),*ptr,*ptra,*ptrb,*ptrc,*ptrd,*ptr1,*ptr2;
	int retval=1;

	ptr = root;
	while( 1 )
	{
		while( ptr != NULL )
		{
			Push( ptr );
			ptr = ptr->left;
		}
		ptr = Pop();
