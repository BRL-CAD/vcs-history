				s/:/ /g'`

for PLACE in ${PATH_ELEMENTS} ; do
	PATTERN="${PLACE}/man?/$1.?"
	TRY=`eval echo ${PATTERN}`
	if test "${TRY}" != "${PATTERN}" ; then
