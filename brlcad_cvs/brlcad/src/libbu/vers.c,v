/** @@file vers.c
 *
 * version information about LIBBU
 *
 * Author -
 *   Christopher Sean Morrison
 */

#include "common.h"

#include "bu.h"
#include "brlcad_version.h"


/**
 * returns the compile-time version of libbu
 */
const char *
bu_version(void)
{
    return brlcad_ident("The BRL-CAD Utility Library");
}

