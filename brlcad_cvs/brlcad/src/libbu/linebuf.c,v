#ifndef lint
static const char libbu_linebuf_RCSid[] = "@@(#)$Header: /cvsroot/brlcad/brlcad/src/libbu/linebuf.c,v 14.23 2007/12/15 09:17:29 brlcad Exp $ (ARL)";
#endif

#include "common.h"

#include <stdio.h>

#include "machine.h"
#include "bu.h"

#ifndef BUFSIZE
#  define BUFSIZE 2048
#endif

/** deprecated call for compatibility
 */
void
port_setlinebuf(FILE *fp)
{
    bu_log("\
WARNING: port_setlinebuf is deprecated and will be removed in a\n\
future release of BRL-CAD.  Use bu_setlinebuf instead.\n");
    bu_setlinebuf(fp);
    return ;
}

void
bu_setlinebuf(FILE *fp)
{
    if (!fp) {
	return;
    }

    /* prefer this one */
    if (setvbuf( fp, (char *) NULL, _IOLBF, BUFSIZE) != 0) {
	perror("bu_setlinebuf");
    }
}
/** @@} */
