/** @@file tienet_util.h
 *
 *  Comments -
 *      TIE Networking Utilities Header
 *
 *  Author -
 *      Justin L. Shumaker
 *
 *  Source -
 *      The U. S. Army Research Laboratory
 *      Aberdeen Proving Ground, Maryland  21005-5068  USA
 *
 * $Id: tienet_util.h,v 1.8 2007/12/05 15:33:42 erikgreenwald Exp $
 */

#ifndef _TIENET_UTIL_H
#define _TIENET_UTIL_H

#include "common.h"

#include <pthread.h>
#include <sys/types.h>
#include <sys/socket.h>
#ifdef HAVE_STDINT_H
#  include <stdint.h>
#endif


#define TIENET_BUFFER_INIT(_b) { \
	_b.data = NULL; \
	_b.size = 0; \
	_b.ind = 0; }

#define TIENET_BUFFER_FREE(_b) free(_b.data);

#define TIENET_BUFFER_SIZE(_b, _s) { \
	if(_s > _b.size) { \
	  _b.data = realloc(_b.data, _s); \
	  _b.size = _s; \
        } }

typedef struct tienet_buffer_s {
  uint8_t *data;
  uint32_t size;
  uint32_t ind;
} tienet_buffer_t;


typedef struct tienet_sem_s {
  int val;
  pthread_mutex_t mut;
  pthread_cond_t cond;
} tienet_sem_t;


extern	void	tienet_flip(void *src, void *dest, int size);
extern	int	tienet_send(int socket, void *data, int size, int flip);
extern	int	tienet_recv(int socket, void *data, int size, int flip);

extern	void	tienet_sem_init(tienet_sem_t *sem, int val);
extern	void	tienet_sem_free(tienet_sem_t *sem);
extern	void	tienet_sem_wait(tienet_sem_t *sem);
extern	void	tienet_sem_post(tienet_sem_t *sem);

#endif

/*
 * Local Variables:
 * mode: C
 * tab-width: 8
 * c-basic-offset: 4
 * indent-tabs-mode: t
 * End:
 * ex: shiftwidth=4 tabstop=8
 */
