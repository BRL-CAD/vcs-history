@# $Id: Makefile.am,v 14.13 2007/09/07 19:54:17 erikgreenwald Exp $

if WITH_X11
IR_X_BIN=ir-X
IR_X_MAN=ir-X.1
else
IR_X_EXTRA=ir-X.c ir-X.1
endif

bin_PROGRAMS = \
	all_sf \
	showtherm \
	firpass \
	${IR_X_BIN} \
	ir-sgi \
	irdisp \
	secpass \
	shapefact

AM_CPPFLAGS = ${TCL_CPPFLAGS}

all_sf_SOURCES = all_sf.c
all_sf_LDADD = ${RT}

showtherm_SOURCES = showtherm.c
showtherm_LDADD = ${RT}

firpass_SOURCES = firpass.c subroutines.c
firpass_LDADD = ${RT}

irdisp_SOURCES = irdisp.c
irdisp_CFLAGS = ${X_CFLAGS}

ir_sgi_SOURCES = ir-sgi.c
ir_sgi_LDADD = ${BU}

if WITH_X11
ir_X_SOURCES = ir-X.c
ir_X_CFLAGS = ${X_CFLAGS}
ir_X_LDADD = \
	${BU} \
	${X_LIBS}
endif

secpass_SOURCES = secpass.c subroutines.c
secpass_LDADD = ${RT}

shapefact_SOURCES = shapefact.c
shapefact_LDADD = ${RT}

man_MANS = \
	all_sf.1 \
	showtherm.1 \
	firpass.1 \
	irdisp.1 \
	ir-sgi.1 \
	ir-X.1 \
	secpass.1 \
	shapefact.1

EXTRA_DIST = \
	$(man_MANS) \
	${IR_X_EXTRA} \
	Compile.sgi \
	pictsgi.1 \
	pictsgi.c \
	pictx.1 \
	pictx.c \
	see.1 \
	see.c \
	see2.1 \
	see2.c

DEPS=src/librt

include $(top_srcdir)/misc/Makefile.defs

FAST_OBJECTS = \
	$(all_sf_OBJECTS) \
	$(showtherm_OBJECTS) \
	$(firpass_OBJECTS) \
	$(ir_X_OBJECTS) \
	$(ir_sgi_OBJECTS) \
	$(irdisp_OBJECTS) \
	$(secpass_OBJECTS) \
	$(shapefact_OBJECTS) \
	$(bin_PROGRAMS)
@


