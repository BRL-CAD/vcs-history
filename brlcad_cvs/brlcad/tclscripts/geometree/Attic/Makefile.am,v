@generate tclIndex via makefile instead of using ami.tcl
@
text
@d1 1
a1 1
# $Id: Makefile.am,v 1.1.2.3 2003/12/16 15:42:02 erikg Exp $
a11 1
.PHONY : tclIndex
d13 2
a14 1
	grep '^[ \t]*proc' *tcl *tk | sed 's,\([^:]*\):[ \t]*proc[ \t]*\([a-zA-Z0-9_?/:-][a-zA-Z0-9_?/:-]*\).*,set auto_index(\2) [list source [file join \$$dir \1]],' > tclIndex
@


