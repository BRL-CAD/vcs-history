itcl_class Appliance {

	method power {power} {
		if {[itcl_info objects [info which $outlet]] == ""} {
			set outlet {}
		}
		if {$outlet == ""} {
			error "cannot use $this: not plugged in"
		}
		$outlet use $power
	}

	public outlet {}
}
@


