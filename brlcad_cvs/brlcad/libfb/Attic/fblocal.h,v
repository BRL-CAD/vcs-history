 *	All rights reserved.
 *
 *  $Header: /n/xoff/cvs/brlcad/libfb/fblocal.h,v 11.2 2004/02/02 17:39:12 morrison Exp $
 */

#ifndef INCL_FBLOCAL
#define INCL_FBLOCAL

#include "machine.h"
#include "externs.h"

#define Malloc_Bomb( _bytes_ ) \
		fb_log( "\"%s\"(%d) : allocation of %d bytes failed.\n", \
				__FILE__, __LINE__, _bytes_ )

#ifndef _LOCAL_
/* Useful for ADB when debugging, set to nothing */
#define _LOCAL_ static
#endif

#endif /* INCL_FBLOCAL */
@


